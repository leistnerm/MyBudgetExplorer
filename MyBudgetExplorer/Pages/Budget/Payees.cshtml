@page
@model MyBudgetExplorer.Pages.Budget.PayeesModel
<table class="table table-striped table-bordered table-sm table-hover">
    <thead class="thead-light">
        <tr>
            <th scope="col" width="50%" style="vertical-align: middle">Payee</th>
            <th scope="col" width="25%" style="text-align: right">@Model.Date.ToString("MMM yy")</th>
            <th scope="col" width="25%" style="text-align: right">Average</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var payee in Model.Payees)
        {
            <tr>
                <td scope="row"><a asp-page="/Budget/Payee" asp-route-id="@payee.PayeeId">@payee.Name</a></td>
                <td style="text-align: right;font-weight:bold;">@payee.Current</td>
                <td style="text-align: right;font-weight:bold;">@payee.Average</td>
            </tr>
        }
    </tbody>
</table>
