@page
@model MyBudgetExplorer.Pages.Budget.AccountsModel
<table class="table table-striped table-bordered table-sm table-hover">
    <thead class="thead-light">
        <tr>
            <th scope="col" width="50%" style="vertical-align: middle">Account</th>
            <th scope="col" width="25%" style="text-align: right">Cleared Balance</th>
            <th scope="col" width="25%" style="text-align: right">Balance</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var account in Model.Accounts)
        {
            <tr>
                <td scope="row"><a asp-page="/Budget/Account" asp-route-id="@account.AccountId">@account.Name</a></td>
                <td style="text-align: right;font-weight:bold;">@account.ClearedBalance</td>
                <td style="text-align: right;font-weight:bold;">@account.Balance</td>
            </tr>
        }
    </tbody>
</table>