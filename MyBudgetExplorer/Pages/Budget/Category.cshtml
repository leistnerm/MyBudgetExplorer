@page
@model MyBudgetExplorer.Pages.Budget.CategoryModel
<h3>
    @Model.Date.ToString("MMMM yyyy")
    <a asp-page="/Budget/Category" asp-route-id="@Model.Id" asp-route-date="@Model.Previous">Previous</a> |
    <a asp-page="/Budget/Category" asp-route-id="@Model.Id" asp-route-date="@Model.Next">Next</a>
</h3>
<br />
<div class="card-deck mb-3 text-center">
    <div class="card mb-4 shadow-sm">
        <div class="card-header">
            <h4 class="my-0 font-weight-normal">From @Model.LastMonthAbbreviation</h4>
        </div>
        <div class="card-body">
            <h1>@Model.LastMonthAvailable</h1>
        </div>
    </div>
    <div class="card mb-4 shadow-sm">
        <div class="card-header">
            <h4 class="my-0 font-weight-normal">Budgeted</h4>
        </div>
        <div class="card-body">
            <h1>@Model.Budgeted</h1>
        </div>
    </div>
    <div class="card mb-4 shadow-sm">
        <div class="card-header">
            <h4 class="my-0 font-weight-normal">Activity</h4>
        </div>
        <div class="card-body">
            <h1>@Model.Activity</h1>
        </div>
    </div>
    <div class="card mb-4 shadow-sm">
        <div class="card-header">
            <h4 class="my-0 font-weight-normal">Available</h4>
        </div>
        <div class="card-body">
            <h1>@Model.Available</h1>
        </div>
    </div>
</div>
<table class="table table-striped table-bordered table-sm table-hover">
    <thead class="thead-light">
        <tr>
            <th scope="col" width="15%">Date</th>
            <th scope="col" width="55%">Payee</th>
            <th scope="col" width="15%" style="text-align: right">Amount</th>
            <th scope="col" width="15%" style="text-align: right">Available</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var transaction in Model.Transactions)
        {
            <tr>
                <td scope="row">@transaction.DateDisplay</td>
                <td>@transaction.Payee</td>
                <td style="text-align: right">@transaction.AmountDisplay</td>
                <td style="text-align: right">@transaction.Available</td>
            </tr>
        }
    </tbody>
</table>