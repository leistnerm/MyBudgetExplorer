@page
@model MyBudgetExplorer.Pages.Budget.PayeeModel
<h3>
    @Model.Date.ToString("MMMM yyyy")
    <a asp-page="/Budget/Payee" asp-route-id="@Model.Id" asp-route-date="@Model.Previous">Previous</a> |
    <a asp-page="/Budget/Payee" asp-route-id="@Model.Id" asp-route-date="@Model.Next">Next</a>
</h3>
<table class="table table-striped table-bordered table-sm table-hover">
    <thead class="thead-light">
        <tr>
            <th scope="col" width="15%">Date</th>
            <th scope="col">Category</th>
            <th scope="col" width="15%" style="text-align: right">Amount</th>
            <th scope="col" width="15%" style="text-align: right">@Model.Date.ToString("MMM yy")</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var transaction in Model.Transactions)
        {
            <tr>
                <th scope="row">@transaction.DateDisplay</th>
                <td>@transaction.Category</td>
                <td style="text-align: right">@transaction.AmountDisplay</td>
                <td style="text-align: right">@transaction.Total</td>
            </tr>
        }
    </tbody>
</table>